    <ul>
      @foreach( var item in Model.Products ) {
        <li><a href="@Url.RouteUrl("Product", new { productId = item.Id, SeName = item.SeName })">
          <img src="@item.DefaultPictureModel.ImageUrl" alt="" /></a></li>
          
      }
    </ul>
  </div>
  
