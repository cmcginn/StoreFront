    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content( "~/Themes/DefaultClassic/Scripts/jquery.jcarousel.pack.js" )" type="text/javascript"></script>
    <script src="@Url.Content( "~/Themes/DefaultClassic/Scripts/jquery.easing.1.3.js" )" type="text/javascript"></script>
    <script src="@Url.Content( "~/Themes/DefaultClassic/Scripts/jquery.jcarousel.setup.js" )" type="text/javascript"></script>
    @*custom scripts*@
    @Html.NopScripts()
    @*canonical URLs*@
    @Html.NopCanonicalUrls()
    @*News and blog RSS links*@
    @Html.Action("RssHeaderLink", "News")
    @Html.Action("RssHeaderLink", "Blog")
    @*Favicon - upload upload favicon.ico file to the root directory*@
    @Html.Action("Favicon", "Common")
    @Html.Action("WidgetsByZone", "Widget", new { widgetZone = Nop.Core.Domain.Cms.WidgetZone.HeadHtmlTag })
    @if (displayMiniProfiler)
    {
        @MvcMiniProfiler.MiniProfiler.RenderIncludes();
    }
